@{
    ViewBag.Title = "Personel Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css{
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.gritter.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-wysihtml5.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-toggle-buttons.css" />

    <link rel="stylesheet" type="text/css" href="~/Content/datepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/timepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/daterangepicker.css" />

}

<div class="portlet box purple">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>Personel Ekleme Formu</h4>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
            <a href="#portlet-config" data-toggle="modal" class="config"></a>
            <a href="javascript:;" class="reload"></a>
            <a href="javascript:;" class="remove"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="@Url.Action("personelEkle")" method="post" id="form_sample_2" class="form-horizontal" novalidate="novalidate">
            <div class="alert alert-error hide">
                <button class="close" data-dismiss="alert"></button>
                Formu Boş Bırakmayın Lütfen.
            </div>
            <div class="alert alert-success hide">
                <button class="close" data-dismiss="alert"></button>
                Başarı ile Eklendi
            </div>


            <div class="control-group">
                <label class="control-label">Adı<span class="required">*</span></label>
                <div class="controls">
                    <input type="text" name="adi" data-required="1" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Soyadi<span class="required">*</span></label>
                <div class="controls">
                    <input type="text" name="soyadi" data-required="1" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Telefon<span class="required">*</span></label>
                <div class="controls">
                    <input name="telefon" type="text" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Görevi<span class="required">*</span></label>
                <div class="controls">
                    <input name="gorevi" type="text" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Başlama Tarihi</label>
                <div class="controls">
                    <input class="m-wrap m-ctrl-medium date-picker" name="baslamatarihi" size="16" type="text" value="26-08-2013">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Sgk<span class="required">*</span></label>
                <div class="controls">
                    <input name="sgk" type="text" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Maaş<span class="required">*</span></label>
                <div class="controls">
                    <input name="maas" type="text" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Yapılan Ödeme<span class="required"></span></label>
                <div class="controls">
                    <input name="yapilanodeme" type="text" class="span8 m-wrap">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">İş Çıkış Tarihi</label>
                <div class="controls">
                    <input class="m-wrap m-ctrl-medium date-picker" name="iscikistarihi" size="16" type="text">
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn blue icn-only">Ekle <i class="m-icon-swapright m-icon-white"></i></button>
                <a href="@Url.Action("personelListesi")" class="btn red icn-only">İptal <i class="icon-remove icon-white"></i></button></a>

            </div>
        </form>
        <!-- END FORM-->
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/wysihtml5-0.3.0.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-wysihtml5.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.toggle.buttons.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/additional-methods.min.js"></script>

    <script type="text/javascript" src="~/Scripts/bootstrap-timepicker.js"></script>
    <script type="text/javascript" src="~/Scripts/date.js"></script>
    <script type="text/javascript" src="~/Scripts/daterangepicker.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datepicker.js"></script>

}
@section Run{
App.setPage("form_validation");
    }





